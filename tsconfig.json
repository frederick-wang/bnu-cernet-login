{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    // "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitHelpers": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
